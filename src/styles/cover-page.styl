@require '_variables'
@require '_mixins'

.cover-page
  position relative
  h1
    position absolute
    top 50%
    left 50%
    padding 0 30px
    width 100%
    text-align center
    box-sizing border-box
    transform('translate(-50%,-100%)')
  .page
    background-color $color-blue
    color $color-white
